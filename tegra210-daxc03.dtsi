 /* GPIO Information located here:
  * ./arch/arm/mach-tegra/gpio-names.h
  */

/ {
	gpio@6000d000 {
	    /* Needed for J21 Header SPI1 */
	    gpio_default: default {
	        gpio-to-sfio = <16 17 18 19 20>;
	    };
    };
	
	/* J21 Header SPI1 */
	/* Note the difference in numbering between the connector and bus */
    spi@7000d400 {
    	status = "okay";
    	
    	spi0_0 {
			#address-cells = <0x1>;
			#size-cells = <0x0>;
			compatible = "linux,spidev", "spidev";
			status = "okay";
			reg = <0x0>;
			spi-max-frequency = <20000000>;
			nvidia,enable-hw-based-cs;
			nvidia,cs-setup-clk-count = <0x1e>;
			nvidia,cs-hold-clk-count = <0x1e>;
			nvidia,rx-clk-tap-delay = <0x1f>;
			nvidia,tx-clk-tap-delay = <0x0>;
	    };
	    
	    spi0_1 {
			#address-cells = <0x1>;
			#size-cells = <0x0>;
			compatible = "linux,spidev", "spidev";
			status = "okay";
			reg = <0x1>;
			spi-max-frequency = <20000000>;
			nvidia,enable-hw-based-cs;
			nvidia,cs-setup-clk-count = <0x1e>;
			nvidia,cs-hold-clk-count = <0x1e>;
			nvidia,rx-clk-tap-delay = <0x1f>;
			nvidia,tx-clk-tap-delay = <0x0>;
	    };
    };
    
    /* J23 Expansion Connector SPI0 */
    /* Note the difference in numbering between the connector and bus */
    spi@7000d600 {
		status = "okay";
		
	    spi1_0 {
			#address-cells = <0x1>;
			#size-cells = <0x0>;
			compatible = "linux,spidev", "spidev";
			reg = <0x0>;
			spi-max-frequency = <20000000>;
			nvidia,enable-hw-based-cs;
			nvidia,cs-setup-clk-count = <0x1e>;
			nvidia,cs-hold-clk-count = <0x1e>;
			nvidia,rx-clk-tap-delay = <0x1f>;
			nvidia,tx-clk-tap-delay = <0x0>;
		};
	};

    /* J23 Expansion Connector SPI2 */
    spi@7000d800 {
    	status = "okay";
    	
        spi2_0 {
			#address-cells = <0x1>;
			#size-cells = <0x0>;
			compatible = "linux,spidev", "spidev";
			reg = <0x0>;
			spi-max-frequency = <20000000>;
			nvidia,enable-hw-based-cs;
			nvidia,cs-setup-clk-count = <0x1e>;
			nvidia,cs-hold-clk-count = <0x1e>;
			nvidia,rx-clk-tap-delay = <0x1f>;
			nvidia,tx-clk-tap-delay = <0x0>;
		};
    };
};


