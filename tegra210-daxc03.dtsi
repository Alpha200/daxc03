 /*
  * GPIO Information located here:
  * ./arch/arm/mach-tegra/gpio-names.h
  */

/*
 * J21 Header SPI1 == bus_num 0
 * Expansion SPI0 == bus_num 3
 * Expansion SPI2 == bus_num 1
 */

/ {
	clocks {
		/* 16MHz external crystal oscillator */
		daxc03_clock: mcp251x_osc {
			#clock-cells = <0>;
			compatible = "fixed-clock";
			clock-frequency = <16000000>;
		};
	};

	pinmux@700008d4 {
		common {
			lcd_rst_pv2 {
				nvidia,pins = "lcd_rst_pv2";
				nvidia,pull = <0x2>;
				nvidia,tristate = <0x0>;
				nvidia,enable-input = <TEGRA_PIN_ENABLE>;
			};

			touch_rst_pv6 {
				nvidia,pins = "touch_rst_pv6";
				nvidia,pull = <0x2>;
				nvidia,tristate = <0x0>;
				nvidia,enable-input = <TEGRA_PIN_ENABLE>;
			};
		};
	};

    /* J23 Expansion Connector SPI2 (CAN-A)*/
    /* Note the difference in numbering between the connector and device */
    spi@7000d600 {
		status = "okay";
		spi-max-frequency = <2000000>;

		can@0 {
			#address-cells = <0x1>;
			#size-cells = <0x0>;
			compatible = "microchip,mcp2515";
			reg = <0x0>;

			clocks = <&daxc03_clock>;
			interrupt-parent = <&gpio>;
			interrupts = <TEGRA_GPIO(V, 2) IRQ_TYPE_EDGE_FALLING>;
			spi-max-frequency = <2000000>;

			vdd-supply = <&max77620_ldo5>;
			xceiver-supply = <&max77620_ldo5>;
		};
	};
    
    /* J23 Expansion Connector SPI0 (CAN-B) */
    /* Note the difference in numbering between the connector and device */
    spi@7000da00 {
    	status = "okay";
		spi-max-frequency = <2000000>;

		can@0 {
			#address-cells = <0x1>;
			#size-cells = <0x0>;
			compatible = "microchip,mcp2515";
			reg = <0x0>;

			clocks = <&daxc03_clock>;
			interrupt-parent = <&gpio>;
			interrupts = <TEGRA_GPIO(V, 6) IRQ_TYPE_EDGE_FALLING>;
			spi-max-frequency = <2000000>;

			vdd-supply = <&max77620_ldo5>;
			xceiver-supply = <&max77620_ldo5>;
		};
    };
};


